<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/classListFragment">

    <fragment
        android:id="@+id/classListFragment"
        android:name="io.github.datt16.taam.ui.classlist.ClassListFragment"
        android:label="fragment_class_list"
        tools:layout="@layout/fragment_class_list" >
        <action
            android:id="@+id/action_classListFragment_to_addClassFragment"
            app:destination="@id/addClassFragment" />
        <action
            android:id="@+id/action_classListFragment_to_classDetailFragment"
            app:destination="@id/classDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/classDetailFragment"
        android:name="io.github.datt16.taam.ui.classdetail.ClassDetailFragment"
        android:label="fragment_class_detail"
        tools:layout="@layout/fragment_class_detail" >
        <argument
            android:name="classId"
            app:argType="long"
            android:defaultValue="1L" />
        <action
            android:id="@+id/action_classDetailFragment_to_addAttendanceFragment"
            app:destination="@id/addAttendanceFragment" />
    </fragment>
    <fragment
        android:id="@+id/addClassFragment"
        android:name="io.github.datt16.taam.ui.AddClassFragment"
        android:label="fragment_add_class"
        tools:layout="@layout/fragment_add_class" >
        <action
            android:id="@+id/action_addClassFragment_to_classListFragment"
            app:destination="@id/classListFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAttendanceFragment"
        android:name="io.github.datt16.taam.ui.attendance.AddAttendanceFragment"
        android:label="AddAttendanceFragment" >
        <action
            android:id="@+id/action_addAttendanceFragment_to_classDetailFragment"
            app:destination="@id/classDetailFragment" />
    </fragment>
    <activity
        android:id="@+id/classDetailActivity"
        android:name="io.github.datt16.taam.ui.classdetail.ClassDetailActivity"
        android:label="activity_class_detail"
        tools:layout="@layout/activity_class_detail" />
</navigation>