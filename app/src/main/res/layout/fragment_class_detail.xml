<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ClassDetailFragment">

    <TextView
        android:id="@+id/header_title_Tv"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="社会実装演習" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_title_Tv"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/times_layout_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="60dp"
                android:baselineAligned="false"
                android:paddingHorizontal="48dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/absence_times_label_Tv"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="欠席時数" />

                    <TextView
                        android:id="@+id/absence_times_value_Tv"
                        style="@style/TextAppearance.MaterialComponents.Headline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/absence_times_label_Tv"
                        android:layout_centerHorizontal="true"
                        android:text="3" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/class_times_label_Tv"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="授業時数" />

                    <TextView
                        android:id="@+id/class_times_value_Tv"
                        style="@style/TextAppearance.MaterialComponents.Headline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/class_times_label_Tv"
                        android:layout_centerHorizontal="true"
                        android:text="13" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/ignore_times_label_Tv"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="公欠時数" />

                    <TextView
                        android:id="@+id/ignore_times_value_Tv"
                        style="@style/TextAppearance.MaterialComponents.Headline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ignore_times_label_Tv"
                        android:layout_centerHorizontal="true"
                        android:text="1" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/message_Tv"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/times_layout_part"
                android:layout_centerHorizontal="true"
                android:text="あと1日休めます" />

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message_Tv"
                android:layout_centerHorizontal="true"
                android:text="休める時数 : --" />
        </RelativeLayout>

        <TextView
            android:id="@+id/attendance_tool_Label"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/times_layout_part"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="出席確認" />

        <TextView
            android:id="@+id/attendance_tool_Tv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/times_layout_part"
            android:layout_centerHorizontal="true"
            android:text="Moodle" />

        <TextView
            android:id="@+id/attendance_condition_Label"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/times_layout_part"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="単位取得条件" />

        <TextView
            android:id="@+id/attendance_condition_Tv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/times_layout_part"
            android:layout_centerHorizontal="true"
            android:text="総授業日数の 3/4 以上出席" />

        <TextView
            android:id="@+id/memo_Label"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/times_layout_part"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="リンク" />

        <TextView
            android:id="@+id/memo_Tv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/times_layout_part"
            android:layout_centerHorizontal="true"
            android:text="シラバス" />


    </LinearLayout>

</RelativeLayout>